<script>
function loadData() {
	//location.href = "/test/data.jsp"; 		// 전쳎 페이지를 로드한다ㅣ.

	var xhttp = new XMLHttpRequest();
	console.log(xhttp);
	
	xhttp.omload = function() {
		console.log(this.responseText);	//서버로부터 받은 응답 데이터
	}
	
	xhttp.open("GET", "/test/data.jsp", true);
	xhttp.send();
	
}

	window.addEventListener("load", function () {
		document.querySelector("button").addEventListener("click", function() {
			loadData();
			
		})
		
	})

</script>

</head>

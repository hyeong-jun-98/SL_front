<script>
function regist() {
	form1.action = "/notice/regist";
	form1.method = "post";
	form1.submit();
}

function del() {
	
	 if(confirm("삭제할거야 진짜로? 다 날라가.?")) {
		 location.href = "/notice/delete.jsp?board_id=<%=board.getBoard_id()%>";
	 }
	
}

function edit() {
	
	if(confirm("수정할래 진짜로?")) {
		 form1.action="/notice/edit.jsp";
		 form1.method = "post";
		 form1.submit();
	 }
	
	
}


</script>



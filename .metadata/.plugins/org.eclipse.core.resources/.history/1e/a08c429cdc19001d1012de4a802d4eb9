package javaseapp.thread;

import javax.swing.JProgressBar;

// ProgressBar를 증가시킬 스레드 정의


public class MyThread extends Thread{
	JProgressBar bar;
	int n = 0;
	
	public MyThread(JProgressBar bar) {
		this.bar = bar;
	}
	
	// 개발자는 스레드 정의 시 원하는 로직을 run 메서드에 작성한다.
	public void run() {
		n++;
		bar.setValue(n);
	}
	

}
